# Configuration OpenAI API
# Remplacez 'your_openai_api_key_here' par votre vraie clé API OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Configuration du modèle OpenAI (optionnel)
# Modèle à utiliser pour les suggestions IA
OPENAI_MODEL=gpt-4o-mini

# Nombre maximum de tokens pour les réponses IA (optionnel)
# Défaut: 1000
OPENAI_MAX_TOKENS=1000

# Température pour les réponses IA (optionnel)
# Défaut: 0.7 (0 = très déterministe, 1 = très créatif)
OPENAI_TEMPERATURE=0.7

# Configuration Flask (optionnel)
# Environnement de l'application
FLASK_ENV=production

# Configuration du serveur (optionnel)
# Port d'écoute (modifié dans docker-compose.yml si nécessaire)
FLASK_RUN_PORT=5000

# Configuration de debug (optionnel)
# Ne pas activer en production
FLASK_DEBUG=False 